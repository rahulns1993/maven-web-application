node{
    def mavenHome = tool name: 'maven3.9.0'
try{    
stage('checkOut'){
    sendSlackNotifications('STARTED')
git branch: 'development', credentialsId: 'dde2abd5-254a-4d20-8ecf-f8fc4a599602', url: 'https://github.com/rahulns1993/maven-web-application.git'
}
stage('Build'){
    sh "${mavenHome}/bin/mvn package"
}
stage('Execute_SQ'){
  sendSlackNotifications('Start SQ')
    sh "${mavenHome}/bin/mvn sonar:sonar"
}
stage('upload_to_Nexus'){
    sh "${mavenHome}/bin/mvn clean deploy"
}

stage('DeployinTomcat'){
    sshagent(['31fc3c05-760d-4a86-9e23-bf6836b74eff']){
        sh "scp -o StrictHostKeyChecking=no /var/lib/jenkins/workspace/pipeline_scripted_way/target/maven-web-application.war ec2-user@172.31.38.251:/opt/apache-tomcat-9.0.75/webapps/maven-web-application.war"
    }
}
}
catch (e) {
    // If there was an exception thrown, the build failed
    currentBuild.result = "FAILED"
    throw e
  } finally {
    // Success or failure, always send notifications
    sendSlackNotifications(currentBuild.result)
  }
}

def sendSlackNotifications(String buildStatus = 'STARTED') {
  // build status of null means successful
  buildStatus =  buildStatus ?: 'SUCCESSFUL'

  // Default values
  def colorName = 'RED'
  def colorCode = '#FF0000'
  def subject = "${buildStatus}: Job '${env.JOB_NAME} [${env.BUILD_NUMBER}]'"
  def summary = "${subject} (${env.BUILD_URL})"

  // Override default values based on build status
  if (buildStatus == 'STARTED') {
    color = 'VIOLET'
    colorCode = '#B75CFF'
  } else if (buildStatus == 'SUCCESSFUL') {
    color = 'GREEN'
    colorCode = '#00FF00'
  } else {
    color = 'BLACK'
    colorCode = '#0E050F'
  }

  // Send notifications
  slackSend (color: colorCode, message: summary)
}
